
<div class="days" >
{{#each days as |day|}}
    <div class={{if day.isSkipped "day-red" "day"}}>
        <div>
            <button class="skipButton" {{on "click" (fn @postNewSkip day.dayOfMonth @month @year)}}>
                {{#if day.isSkipped}}
                Dont skip
                {{else}}
                Skip
                {{/if}}
            </button> 
        </div>
        

        <div class="dayProps">
            {{day.dayOfMonth}} - {{@month}} - {{@year}} 
        </div>
         
        <Job 
            @day={{day.dayOfMonth}} 
            @month={{@month}} 
            @year={{@year}} 
            @dateArray={{@dateArray}} 
            @postToDb={{@postToDb}} 
            @deleteFromDb={{@deleteFromDb}}
            @moveJob={{@moveJob}}
        >

        </Job>
    </div>
{{/each}}
</div>


